<?xml version="1.0" encoding="UTF-8"?><Configuration status="WARN" monitorInterval="30">    <Properties>        <Property name = "basePath">./logs</Property>    </Properties>    <Appenders>        <!-- 控制台输出 -->        <Console name="Console" target="SYSTEM_OUT">            <PatternLayout pattern="[%d{HH:mm:ss}] [%-5level] [%t] %c{1} - %msg%n"/>        </Console>        <!-- 文件输出，每天新建一个日志文件 -->        <RollingFile name="FileLogger"                     fileName="${basePath}/Automation.log"                     filePattern="${basePath}/Automation-%d{yyyy-MM-dd}.log">            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%-5level] %c{1} - %msg%n"/>            <Policies>                <!-- 每天新建一个日志文件 -->                <OnStartupTriggeringPolicy/>                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>                <!-- 超过 10MB 自动滚动 -->                <SizeBasedTriggeringPolicy size="10MB"/>            </Policies>            <!-- 最多保留 30 个历史日志 -->            <DefaultRolloverStrategy max="30"/>        </RollingFile>    </Appenders>    <Loggers>        <!--        &lt;!&ndash; 适用于 RestAssured 的日志输出 &ndash;&gt;-->        <!--        <Logger name="io.restassured" level="info" additivity="false">-->        <!--            <AppenderRef ref="Console"/>-->        <!--            <AppenderRef ref="FileLogger"/>-->        <!--        </Logger>-->        <!--        &lt;!&ndash; 项目 API 包日志输出 &ndash;&gt;-->        <!--        <Logger name="api" level="debug" additivity="false">-->        <!--            <AppenderRef ref="Console"/>-->        <!--            <AppenderRef ref="FileLogger"/>-->        <!--        </Logger>-->        <!-- 根日志（默认） -->        <Root level="info">            <AppenderRef ref="Console"/>            <AppenderRef ref="FileLogger"/>        </Root>    </Loggers></Configuration>